<p style="color: green"><%= notice %></p>

<h1><%= t('views.common.title_index', name: i18n_pluralize(Book.model_name.human)) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('views.common.show', name: Book.model_name.human.downcase), book %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @books %>
<% if current_user %>
  <li>
    <%= link_to t('views.common.title_index', name: User.model_name.human.downcase), users_path %>
  </li>
  <li>
    <%= link_to t('views.common.title_edit', name: User.model_name.human.downcase), "users/edit" %>
  <li>
    <%= link_to t('views.common.logout'), destroy_user_session_path, data: { turbo_method: :delete } %>
  </li>
<% else %>
  <li>
    <%= link_to "ユーザー新規登録", new_user_registration_path %>
  </li>
  <li>
    <%= link_to "ログイン", new_user_session_path %>
  </li>
<% end %>

<nav class="page-nav">
    <%= link_to t('views.common.new', name: Book.model_name.human.downcase), new_book_path %>
</nav>
